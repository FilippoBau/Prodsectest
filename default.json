{
  "extends": [
    "config:best-practices",
    ":semanticCommitsDisabled",
    ":disableDependencyDashboard"
  ],
  "pinDigests": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "OER"
    ],
    "prBodyNotes": [
      "For further information on security, please refer to the Confluence page"
    ],
    "commitMessagePrefix": " ",
    "commitMessageAction": "Bump ",
    "commitMessageTopic": "{{depName}} from {{currentVersion}} ",
    "commitMessageExtra": "to {{#if newVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}",
    "commitMessageSuffix": " ",
    "branchTopic": "{{depName}}-to-{{#if newVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}",
    "recreateWhen":"always"
  },
  "terraform": {
    "enabled": true
  },
  "major": {
    "enabled": true
  },
  "minor": {
    "enabled": true
  },
  "patch": {
    "enabled": true
  },
  "digest": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "rollback": {
    "enabled": true
  },
  "bump": {
    "enabled": true
  },
  "replacement": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ]
}
