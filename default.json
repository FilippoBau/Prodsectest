{
  "extends": [
    "config:best-practices", ":semanticCommitsDisabled"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "prBodyNotes": [
      "For further information on security, please refer to the Confluence page [link](https://pagopa.atlassian.net/wiki/spaces/ProdSec/overview)"
    ]
  },
  "major": {
    "enabled": true
  },
  "minor": {
    "enabled": false
  },
  "patch": {
    "enabled": false
  },
  "digest": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": false
  },
  "rollback": {
    "enabled": false
  },
  "bump": {
    "enabled": false
  },
  "replacement": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["vulnerability"],
      "labels": ["OER"]
    },
    {
      "enabled": false,
      "matchDepTypes": ["devDependencies"]
    }
  ]
}
