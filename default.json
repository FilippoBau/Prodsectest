{
    "extends": [
        "config:best-practices",
        ":semanticCommitsDisabled",
        ":disableDependencyDashboard"
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
            "OER"
        ],
        "prBodyNotes": [
            "For further information on security, please refer to the Confluence page [link](https://pagopa.atlassian.net/wiki/spaces/ProdSec/overview)"
        ],
        "commitMessagePrefix": " ",
        "commitMessageAction": "Bump ",
        "commitMessageTopic": "{{depName}}",
        "commitMessageExtra": " ",
        "commitMessageSuffix": " ",
        "branchTopic": "{{depName}}",
        "recreateWhen": "always"
    },
    "major": {
        "enabled": true
    },
    "minor": {
        "enabled": true
    },
    "patch": {
        "enabled": false
    },
    "digest": {
        "enabled": false
    },
    "lockFileMaintenance": {
        "enabled": false
    },
    "rollback": {
        "enabled": false
    },
    "bump": {
        "enabled": false
    },
    "replacement": {
        "enabled": false
    },
    "packageRules": [
        {
            "enabled": false,
            "matchDepTypes": [
                "devDependencies"
            ]
        }
    ]
}
